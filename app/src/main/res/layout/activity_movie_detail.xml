<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stenleyaltidor.popularmoviesstage1.MovieDetail">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/app_toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1">


    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#4fc2b1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_toolbar"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1">

        <TextView
            android:id="@+id/detail_title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="38dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintVertical_bias="0.0">


        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imagethumbnail"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    tools:layout_conversion_absoluteHeight="150dp"
                    tools:layout_conversion_absoluteWidth="130dp"
                    tools:layout_conversion_absoluteX="33dp"
                    tools:layout_conversion_absoluteY="208dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="34dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="34dp" />


                <TextView
                    android:id="@+id/release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="release date"
                    tools:layout_conversion_absoluteHeight="17dp"
                    tools:layout_conversion_absoluteWidth="76dp"
                    tools:layout_conversion_absoluteX="218dp"
                    tools:layout_conversion_absoluteY="241dp"
                    app:layout_constraintTop_toTopOf="@+id/imagethumbnail"
                    android:layout_marginTop="-17dp"
                    app:layout_constraintLeft_toRightOf="@+id/imagethumbnail"
                    android:layout_marginLeft="47dp"
                    android:layout_marginStart="47dp" />

                <TextView
                    android:id="@+id/release_date_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mrwwr"
                    tools:layout_conversion_absoluteHeight="17dp"
                    tools:layout_conversion_absoluteWidth="0dp"
                    tools:layout_conversion_absoluteX="245dp"
                    tools:layout_conversion_absoluteY="268dp"
                    android:layout_marginTop="11dp"
                    app:layout_constraintTop_toBottomOf="@+id/release_date"
                    app:layout_constraintLeft_toRightOf="@+id/imagethumbnail"
                    android:layout_marginLeft="63dp"
                    android:layout_marginStart="63dp" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="0.5dp"
                    android:text="rireroe"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="17dp"
                    tools:layout_conversion_absoluteWidth="0dp"
                    tools:layout_conversion_absoluteX="245dp"
                    tools:layout_conversion_absoluteY="299dp"
                    android:layout_marginTop="13dp"
                    app:layout_constraintTop_toBottomOf="@+id/release_date_date"
                    app:layout_constraintLeft_toRightOf="@+id/imagethumbnail"
                    android:layout_marginLeft="63dp"
                    android:layout_marginStart="63dp" />

                <TextView
                    android:id="@+id/mele"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yo mele kou"
                    android:layout_marginTop="29dp"
                    app:layout_constraintTop_toBottomOf="@+id/rating"
                    app:layout_constraintLeft_toRightOf="@+id/imagethumbnail"
                    android:layout_marginLeft="47dp" />

                <TextView
                    android:id="@+id/overview"
                    style="@android:style/Widget.Material.TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="39dp"
                    android:lineSpacingMultiplier="1.2"
                    android:padding="16dp"
                    android:textSize="16sp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagethumbnail"
                    tools:layout_conversion_absoluteHeight="51dp"
                    tools:layout_conversion_absoluteWidth="0dp"
                    tools:layout_conversion_absoluteX="0dp"
                    tools:layout_conversion_absoluteY="384dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />


            </android.support.constraint.ConstraintLayout>

        </ScrollView>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
